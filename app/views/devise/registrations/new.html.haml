.page-title
  %h1 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  = render "devise/shared/error_messages", object: f.object
  .form-inputs
    = f.input :name, required: false, error: false
    = f.input :email, required: true, error: false

    - if @validatable
      %i
        (#{@minimum_password_length} characters minimum)
    = f.input :password, autocomplete: "off", error: false

    = f.input :password_confirmation, label: 'Password confirmation', required: true, error: false
  .border
  .form-actions
    = f.button :submit, "Create My Account"
.border
= render "devise/shared/links"
